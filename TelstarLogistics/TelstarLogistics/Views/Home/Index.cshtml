@model TelstarLogistics.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center">

    <div class="form-body p-4">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                        {
                            if (ViewBag.LoginStatus != null)
                            {
                                if (ViewBag.LoginStatus == 0)
                                {
                                    <div class="alert alert-danger"> Invalid login detail</div>
                                }
                            }

                            <form class="requires-validation" novalidate>
                                <div class="col-md-12 mt-3">

                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username"})

                                    <div class="invalid-feedback">Username field cannot be blank!</div>
                                </div>
                                <div class="col-md-12 mt-3">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password"})

                                    <div class="invalid-feedback">Password field cannot be blank!</div>
                                </div>
                                <div class="form-button col-md-12 mt-3">
                                    <button id="submit" type="submit" class="btn btn-primary w-100">Sign in</button>
                                </div>
                            </form>


                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
